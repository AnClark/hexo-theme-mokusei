
.toolbar
    overflow auto
    color $textColor
    border(left, 1px solid $borderColor)
    font-size 16px
    .widget
        margin-bottom 40px
        padding 30px
        background-color #0a0a0a
        border-radius 3px
    .widget-title
        font-size 20px
        margin-bottom 20px
    .widget-tags
    .widget-categories
        a
            color $textColor
            transition(color)
            &:hover
                color #667800
    .widget-tags
        padding 40px 50px
        border(bottom, 1px solid #0a0a0a)
    .widget-categories
        padding 40px 50px
        border(bottom, 1px solid #0a0a0a)
        li
            padding 5px 0px
        .category-list-count
            &::before
                content "（"
            &::after
                content "）"
    input::-webkit-search-cancel-button
        display none
    input[type=search]::-ms-clear
        display none
    .widget-search
        border(bottom, 1px solid #0a0a0a)
        input[type="search"]
            width 100%
            height 30px
            font-size: $textSize
            color $textColor
            padding 20px 20px
            background none
            outline none
            border:none;
            -webkit-appearance none
            border 1px solid #1f1f1f
            @extend .transition
            &:hover
                border-color #667800
    ::-moz-placeholder
        color: $textColor

