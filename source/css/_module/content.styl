// ------------------------------
// 中栏（主体内容区样式）
// ------------------------------

.column-head
    padding $wrap_margin
    @extend .textShadow
    position relative
    .column-title
        text-align center;
        font-size $column_text_size
        color #ffffff
        position relative
        z-index 10

.main-con
    width 1200px
    margin auto
    overflow hidden
    background $articleAreaColor
    .con-wrap
        display flex
        margin 40px
        .article-area
            flex 1
            margin-right 40px
        .tool-area
            width 300px
    .article
        background-color #0a0a0a
        padding 15px 30px
        margin-bottom 40px
        border-radius 3px

    .article-time
        font-size 12px
        color $textColorDes
        i
            padding-right 10px
    .article-extra
        > li
            display inline-block
            margin 0px 10px 10px 0px
        margin-bottom 20px
        .article-category
            li
                display inline-block
                a
                    font-size 12px
                    color $textColorDes
                    &:hover
                        color $themeColor
    .article-title
        padding-top 10px
        padding-bottom 10px
        overflow hidden
        a
            font-size 28px
            font-weight bold
            color $textColor
            &:hover
                text-decoration underline
    .article-description
        p
            color $textColorDes
    .more-link
        color $themeColor
        display block
        margin 20px 0px
        &:hover
            text-decoration underline
    .tags-list
        margin-top 20px
        display inline-block
        li
            float left
            margin 0px 15px 15px 0px
            a
                display block
                font-size 12px
                padding 5px 15px
                @extend .transition
                background-color rgba(0,0,0,0.2)
                color #aaa
                i
                    padding-right 5px
                &:hover
                    background-color $themeColor
                    color #fff
                    text-decoration none
    .pagination
        margin $wrap_margin
        .current
            background-color $themeColor
            border(all, 1px solid $themeColor)
        span
        a
            display inline-block
            font-size 14px
            padding 10px 20px
            border()
            color $textColor
            @extend .transition
            &:hover
                background-color $themeColor
                color $textColor
.fadeToBottom
    animation fadeToBottom 0.8s ease-out
@keyframes fadeToBottom {
    from {
        opacity 0
        transform translate(0, -30px)
    }    
    to {
        opacity 1
        transform translate(0, 0px)
    }
}
.fadeToTop
    animation fadeToTop 0.8s ease-out
@keyframes fadeToTop {
    from {
        opacity 0
        transform translate(0, 30px)
    }    
    to {
        opacity 1
        transform translate(0, 0px)
    }
}